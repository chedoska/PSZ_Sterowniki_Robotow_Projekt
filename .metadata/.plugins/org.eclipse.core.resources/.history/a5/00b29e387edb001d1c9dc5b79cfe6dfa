#ifndef INC_BALL_CONTROL_H_
#define INC_BALL_CONTROL_H_

#include "gyroscope.h"

struct Ball_control_data
{
	float ctrlX_angle;
	float ctrlY_angle;
	float ctrlZ_angle;
} typedef Ball_control_data;

void ball_ctrl_init(Ball_control_data *ball_data);
void update_ctrl_angles(Ball_control_data *ball_data, L3GD20 *L3GD20_data, float delta_time);

#endif /* INC_BALL_CONTROL_H_ */
